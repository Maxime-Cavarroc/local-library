{
  "compilerOptions": {
    "target": "ES2019",                // Set to a version compatible with your Node.js version
    "module": "commonjs",              // Use 'commonjs' for Node.js
    "outDir": "./dist",                // Output directory for compiled files
    "rootDir": "./",                   // Root directory of your source files
    "strict": true,                    // Enable all strict type-checking options
    "moduleResolution": "node",        // Use Node.js module resolution
    "esModuleInterop": true,           // Allows default imports from modules with no default export
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],                 // Include Node.js types
    "allowSyntheticDefaultImports": true
  },
  "include": ["./**/*.ts"],            // Include all TypeScript files in the project
  "exclude": ["node_modules", "dist"]  // Exclude 'node_modules' and output directory
}